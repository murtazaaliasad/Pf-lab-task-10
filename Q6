#include <stdio.h>

int main() {
    char names[5][50];
    int marks[5];
    int i, highestIndex = 0;
    float sum = 0, average;

    for (i = 0; i < 5; i++) {
        printf("Enter name of student %d: ", i + 1);
        scanf("%s", names[i]);

        printf("Enter marks of %s: ", names[i]);
        scanf("%d", &marks[i]);
    }

    printf("\n----- Student Marks Table -----\n");
    printf("Name\t\tMarks\n");

    for (i = 0; i < 5; i++) {
        printf("%s\t\t%d\n", names[i], marks[i]);
        sum += marks[i];
    }

    for (i = 1; i < 5; i++) {
        if (marks[i] > marks[highestIndex]) {
            highestIndex = i;
        }
    }

    average = sum / 5;

    printf("\nTop Student: %s with %d marks\n", names[highestIndex], marks[highestIndex]);
    printf("Class Average: %.2f\n", average);

    return 0;
}
